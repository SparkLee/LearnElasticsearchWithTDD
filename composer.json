{
    "name": "sparklee/learn-elasticsearch-with-tdd",
    "type": "project",
    "description": "以 TDD 的方式学习 Elasticsearch",
    "keywords": [
        "TDD",
        "PHPUnit",
        "Elasticsearch"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Spark Lee",
            "email": "liweijsj@163.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "vlucas/phpdotenv": "^4.0",
        "elasticsearch/elasticsearch": "7.6.*"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^7.5||^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpunit": "phpunit -vvv",
        "test": [
            "@phpunit"
        ]
    }
}
